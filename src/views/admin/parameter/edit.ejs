<%- include('../partials/admin-header.ejs') %>
<%- include('../partials/admin-body.ejs', { menu: 2, subMenu: 1 }) %>

<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Alteração do Parâmetro</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin">Painel de Controle</a></li>
            <li class="breadcrumb-item"><a href="/admin/parametro/listar">Parâmetros</a></li>
            <li class="breadcrumb-item active">Alteração</li>
          </ol>
        </div>
      </div>
    </div>
  </section>
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <% if (sessionFlash) { %>
          <div class="col-md-12">
            <% if (typeof sessionFlash.message === 'object') { %>
              <% sessionFlash.message.forEach(error => { %>
                <p class="alert alert-<%=sessionFlash.type%>"><%=error.msg%></p>
              <% }); %>
            <% } else { %>
              <p class="alert alert-<%=sessionFlash.type%>"><%=sessionFlash.message%></p>
            <% } %>
          </div>
        <% } %>
        <div class="col-md-12">
          <div class="card card-primary">
            <form id="parameterEdit" action="/admin/parametro/editar/<%=parameterData.id%>" method="POST">
              <div class="card-body">
                <%- include('parameter-form.ejs', { parameterData, readOnly: false }) %>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">SALVAR</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('../partials/admin-footer.ejs') %>

</body>
</html>
