<%- include('../partials/admin-header.ejs') %>
<%- include('../partials/admin-body.ejs', { menu: 3, subMenu: 2 }) %>

<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Consulta do Menu</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin">Painel de Controle</a></li>
            <li class="breadcrumb-item"><a href="/admin/menu/listar">Menus</a></li>
            <li class="breadcrumb-item active">Consulta</li>
          </ol>
        </div>
      </div>
    </div>
  </section>
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <% if (sessionFlash) { %>
          <div class="col-md-12">
            <p class="alert alert-<%=sessionFlash.type%>"><%=sessionFlash.message%></p>
          </div>
        <% } %>
        <div class="col-md-12">
          <div class="card card-primary">
            <div class="card-body">
              <%- include('menu-form.ejs', { menuData, readOnly: true }) %>
            </div>
            <div class="card-footer">
              <a href="/admin/menu/listar" class="btn btn-primary">VOLTAR</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('../partials/admin-footer.ejs') %>
<%- include('../partials/admin-jquery.ejs') %>

</body>
</html>
